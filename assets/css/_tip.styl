div.tip
	position relative

	div.tip-box
		position relative
		padding 10px
		border-bottom dashed 1px #1EB776

		.tip-image
			position absolute
			width 50px
			left 10px
			top 10px

			img
				display inline-block
				max-width 100%

		.tip-content
			margin-right 40px
			margin-left 50px

			p
				text-align left
				margin-top 0

		.tip-stars
			text-align center
			width 30px
			right 10px
			top 10px
			position absolute

			a
				img
					display inline-block

			span
				font-size 85%
				color #1EB776

