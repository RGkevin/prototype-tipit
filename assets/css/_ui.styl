
// buttons
.form-button
	display inline-block
	background-color transparent
	border solid 1px white
	color white

	&.form-button-mint
		background-color #27AD68
		border-radius 5px
		border-top-width 0
		border-left-width 0
		border-right-width 0
		border-bottom solid 5px #82BE37


.form-input
	padding 6px 10px

// layout
.text-center
	text-align center